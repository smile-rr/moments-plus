---
import type { Locale } from '../i18n';
import { t } from '../i18n';
import { generateSEOData } from '../utils/seo';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  lang: Locale;
  currentPath: string;
}

const { title, description, keywords, lang, currentPath } = Astro.props;
const seoData = generateSEOData(title, description, lang, currentPath, undefined, undefined, keywords);
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <title>{seoData.title}</title>
    <meta name="description" content={seoData.description} />
    <meta name="keywords" content={seoData.keywords} />
    <link rel="canonical" href={seoData.canonical} />
    
    <!-- Hreflang Tags -->
    {seoData.alternates.map(({ hreflang, href }) => (
      <link rel="alternate" hreflang={hreflang} href={href} />
    ))}
    
    <!-- Open Graph -->
    <meta property="og:title" content={seoData.openGraph.title} />
    <meta property="og:description" content={seoData.openGraph.description} />
    <meta property="og:image" content={seoData.openGraph.image} />
    <meta property="og:type" content={seoData.openGraph.type} />
    <meta property="og:url" content={seoData.canonical} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={seoData.openGraph.title} />
    <meta name="twitter:description" content={seoData.openGraph.description} />
    <meta name="twitter:image" content={seoData.openGraph.image} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    
    <!-- JSON-LD Schema -->
    {seoData.schema && <script type="application/ld+json" set:html={seoData.schema} />}
  </head>
  <body style="background: var(--color-bg); color: var(--color-text);">
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[200] px-4 py-2 bg-white text-black font-medium rounded-lg shadow-lg ring-2 ring-black"
    >
      {t(lang, 'common.skipToContent')}
    </a>
    <Header lang={lang} currentPath={currentPath} />
    <main id="main-content">
      <slot />
    </main>
    <Footer lang={lang} currentPath={currentPath} />
  </body>
</html>
