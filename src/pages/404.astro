---
import BaseLayout from '../layouts/BaseLayout.astro';
import { DEFAULT_LOCALE, t, getLocalizedPath } from '../i18n';

const lang = DEFAULT_LOCALE;
const currentPath = '/404';
---

<BaseLayout 
  title={t(lang, 'common.notFound')}
  description={t(lang, 'common.notFoundMessage')}
  lang={lang}
  currentPath={currentPath}
>
  <div class="min-h-[60vh] flex items-center justify-center px-4 py-16">
    <div class="text-center max-w-md">
      <h1 class="text-8xl md:text-9xl font-bold bg-gradient-to-br from-gray-900 via-gray-700 to-gray-500 dark:from-white dark:via-gray-300 dark:to-gray-500 bg-clip-text text-transparent mb-4">
        404
      </h1>
      <h2 class="text-2xl md:text-3xl font-semibold text-gray-900 dark:text-white mb-4">
        {t(lang, 'common.notFound')}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 leading-relaxed">
        {t(lang, 'common.notFoundMessage')}
      </p>
      <a 
        href={getLocalizedPath(lang, '')} 
        class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-xl font-medium transition-all hover:scale-105 shadow-lg hover:shadow-xl"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        {t(lang, 'common.backToHome')}
      </a>
    </div>
  </div>
</BaseLayout>
