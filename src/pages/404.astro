---
import BaseLayout from '../layouts/BaseLayout.astro';
import { DEFAULT_LOCALE, t, getLocalizedPath } from '../i18n';

const lang = DEFAULT_LOCALE;
const currentPath = '/404';
---

<BaseLayout 
  title={t(lang, 'common.notFound')}
  description={t(lang, 'common.notFoundMessage')}
  lang={lang}
  currentPath={currentPath}
>
  <div class="not-found">
    <div class="not-found-content">
      <h1>404</h1>
      <h2>{t(lang, 'common.notFound')}</h2>
      <p>{t(lang, 'common.notFoundMessage')}</p>
      <a href={getLocalizedPath(lang, '')} class="back-home">
        {t(lang, 'common.backToHome')}
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .not-found-content {
    text-align: center;
    max-width: 500px;
  }

  .not-found h1 {
    font-size: 6rem;
    font-weight: 700;
    background: linear-gradient(135deg, #333 0%, #666 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1rem;
    line-height: 1;
  }

  .not-found h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .not-found p {
    font-size: 1.1rem;
    color: #666;
    margin-bottom: 2rem;
  }

  .back-home {
    display: inline-block;
    background: #007AFF;
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 12px;
    font-weight: 500;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .back-home:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 122, 255, 0.3);
  }

  @media (max-width: 768px) {
    .not-found h1 {
      font-size: 4rem;
    }

    .not-found h2 {
      font-size: 1.5rem;
    }

    .not-found p {
      font-size: 1rem;
    }
  }
</style>
