---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { SUPPORTED_LOCALES, type Locale, t } from '../../../i18n';
import { getBlogPosts, formatDate } from '../../../utils/blog';

export async function getStaticPaths() {
  return SUPPORTED_LOCALES
    .filter(lang => lang !== 'en')
    .map((lang) => ({
      params: { lang },
    }));
}

const { lang } = Astro.params as { lang: Locale };
const posts = await getBlogPosts(lang);
const currentPath = `/${lang}/blog`;
---

<BaseLayout 
  title={t(lang, 'blog.title')} 
  description={t(lang, 'blog.subtitle')}
  lang={lang}
  currentPath={currentPath}
>
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {t(lang, 'blog.title')}
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        {t(lang, 'blog.subtitle')}
      </p>
    </div>

    <div class="space-y-8">
      {posts.map((post) => (
        <article class="bg-white dark:bg-gray-800 rounded-xl p-6 md:p-8 shadow-lg hover:shadow-xl transition-shadow border border-gray-200 dark:border-gray-700">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-4">
            <div>
              {post.data.category && (
                <span class="inline-block px-3 py-1 text-sm font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full mb-2">
                  {post.data.category}
                </span>
              )}
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                <a href={`/${lang}/blog/${post.id.split('/')[1].replace(/\.md$/, '')}`}>
                  {post.data.title}
                </a>
              </h2>
            </div>
          </div>
          
          <p class="text-gray-600 dark:text-gray-400 mb-4 leading-relaxed">
            {post.data.description}
          </p>
          
          <div class="flex items-center justify-between">
            <time class="text-sm text-gray-500 dark:text-gray-500">
              {formatDate(post.data.publishDate, lang)}
            </time>
            <a 
              href={`/${lang}/blog/${post.id.split('/')[1].replace(/\.md$/, '')}`}
              class="text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium inline-flex items-center gap-2 transition-colors"
            >
              {t(lang, 'blog.readMore')}
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>
