---
import BaseLayout from '../layouts/BaseLayout.astro';
import { DEFAULT_LOCALE, type Locale, t } from '../i18n';
import { getSupportContent } from '../utils/content';

const lang: Locale = DEFAULT_LOCALE;
const supportContent = await getSupportContent(lang);

if (!supportContent) {
  return Astro.redirect('/404');
}

const { data, render } = supportContent;
const { Content } = await render();
const currentPath = '/support';
---

<BaseLayout 
  title={data.title} 
  description={data.description} 
  lang={lang}
  currentPath={currentPath}
>
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-12 md:py-16">
    <!-- Hero Section -->
    <div class="text-center mb-12 md:mb-16">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        {data.title}
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        {data.description}
      </p>
    </div>

    <!-- Contact Card -->
    <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 md:p-8 mb-12 border border-blue-100 dark:border-blue-800">
      <div class="flex flex-col md:flex-row items-center gap-4 md:gap-6">
        <div class="w-16 h-16 bg-blue-600 rounded-2xl flex items-center justify-center shrink-0">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <div class="text-center md:text-left">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
            Contact Us
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-2">
            Have questions? We're here to help.
          </p>
          <a 
            href={`mailto:${data.email}`}
            class="inline-flex items-center gap-2 text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 font-medium transition-colors"
          >
            {data.email}
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- FAQ Section -->
    {data.faq && data.faq.length > 0 && (
      <div class="mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white mb-8 text-center">
          Frequently Asked Questions
        </h2>
        <div class="space-y-4">
          {data.faq.map((item, index) => (
            <details class="group bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
              <summary class="flex items-center justify-between p-5 md:p-6 cursor-pointer list-none">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white pr-4">
                  {item.question}
                </h3>
                <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </summary>
              <div class="px-5 md:px-6 pb-5 md:pb-6 pt-0">
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  {item.answer}
                </p>
              </div>
            </details>
          ))}
        </div>
      </div>
    )}
    
    <!-- Additional Content -->
    <div class="prose prose-lg dark:prose-invert max-w-none
      prose-headings:text-gray-900 dark:prose-headings:text-white
      prose-p:text-gray-600 dark:prose-p:text-gray-300
      prose-a:text-blue-600 dark:prose-a:text-blue-400
    ">
      <Content />
    </div>
  </div>
</BaseLayout>
