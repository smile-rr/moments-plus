---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
---

<header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 sticky top-0 z-50 backdrop-blur-sm bg-white/90 dark:bg-gray-900/90 transition-colors">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center gap-4">
    <div class="logo">
      <a href={getLocalizedPath(lang, '')} class="flex items-center gap-2 text-gray-900 dark:text-white font-semibold text-xl hover:opacity-80 transition-opacity">
        <img src="/images/icon/AppIconImage.png" alt="Moments+ Icon" class="w-8 h-8 rounded-lg" />
        <span>Moments+</span>
      </a>
    </div>
    
    <div class="hidden lg:flex gap-8 flex-1 justify-center items-center">
      <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.home')}
      </a>
      <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.features')}
      </a>
      <a href={getLocalizedPath(lang, 'blog')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.blog')}
      </a>
      <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.support')}
      </a>
      <a 
        href="https://apps.apple.com" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors shadow-sm hover:shadow-md"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        {t(lang, 'nav.download')}
      </a>
    </div>
    
    <div class="flex items-center gap-2">
      <ThemeToggle />
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div class="lg:hidden flex flex-wrap justify-center gap-4 px-4 pb-4 border-t border-gray-100 dark:border-gray-800 pt-4">
    <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors text-sm">
      {t(lang, 'nav.home')}
    </a>
    <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors text-sm">
      {t(lang, 'nav.features')}
    </a>
    <a href={getLocalizedPath(lang, 'blog')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors text-sm">
      {t(lang, 'nav.blog')}
    </a>
    <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors text-sm">
      {t(lang, 'nav.support')}
    </a>
    <a 
      href="https://apps.apple.com" 
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-medium transition-colors text-sm"
    >
      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
      </svg>
      {t(lang, 'nav.download')}
    </a>
  </div>
</header>
