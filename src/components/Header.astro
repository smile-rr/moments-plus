---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
---

<header class="bg-white dark:bg-gray-900 border-b border-gray-200 dark:border-gray-800 sticky top-0 z-50 backdrop-blur-sm bg-white/90 dark:bg-gray-900/90 transition-colors">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center gap-4">
    <div class="logo">
      <a href={getLocalizedPath(lang, '')} class="flex items-center gap-2 text-gray-900 dark:text-white font-semibold text-xl hover:opacity-80 transition-opacity">
        <img src="/images/icon/AppIconImage.png" alt="Moments+ Icon" class="w-8 h-8 rounded-lg" />
        <span>Moments+</span>
      </a>
    </div>
    
    <div class="hidden md:flex gap-8 flex-1 justify-center">
      <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.home')}
      </a>
      <a href={getLocalizedPath(lang, 'blog')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.blog')}
      </a>
      <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
        {t(lang, 'nav.support')}
      </a>
    </div>
    
    <div class="flex items-center gap-2">
      <ThemeToggle />
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
    </div>
  </nav>
  
  <!-- Mobile menu -->
  <div class="md:hidden flex justify-center gap-6 px-4 pb-4 border-t border-gray-100 dark:border-gray-800 pt-4">
    <a href={getLocalizedPath(lang, '')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
      {t(lang, 'nav.home')}
    </a>
    <a href={getLocalizedPath(lang, 'blog')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
      {t(lang, 'nav.blog')}
    </a>
    <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 dark:text-gray-300 font-medium hover:text-gray-900 dark:hover:text-white transition-colors">
      {t(lang, 'nav.support')}
    </a>
  </div>
</header>
