---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;

const downloadText = {
  en: 'Get the App',
  zh: '获取应用',
  ja: 'アプリを入手',
};
---

<header style="background: rgba(250, 250, 250, 0.8); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(0, 0, 0, 0.04);" class="sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center">
    <a href={getLocalizedPath(lang, '')} class="font-semibold hover:opacity-70 transition-opacity" style="color: #1d1d1f;">
      Moments+
    </a>
    
    <div class="flex items-center gap-6">
      <div class="hidden md:flex items-center gap-6">
        <a href={getLocalizedPath(lang, 'blog')} class="text-sm hover:opacity-70 transition-opacity" style="color: #86868b;">
          {t(lang, 'nav.blog')}
        </a>
        <a href={getLocalizedPath(lang, 'support')} class="text-sm hover:opacity-70 transition-opacity" style="color: #86868b;">
          {t(lang, 'nav.support')}
        </a>
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
      </div>
      <a 
        href="https://apps.apple.com/app/moments-plus" 
        target="_blank"
        rel="noopener noreferrer"
        class="px-4 py-2 rounded-full text-sm font-medium hover:opacity-90 transition-opacity"
        style="background: #0071e3; color: white;"
      >
        {downloadText[lang]}
      </a>
    </div>
  </nav>
</header>
