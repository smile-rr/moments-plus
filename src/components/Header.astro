---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50 backdrop-blur-sm bg-white/90">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center gap-8">
    <div class="logo">
      <a href={getLocalizedPath(lang, '')} class="flex items-center gap-2 text-gray-900 font-semibold text-xl hover:opacity-80 transition-opacity">
        <img src="/images/icon/AppIconImage.png" alt="Moments+ Icon" class="w-8 h-8 rounded-lg" />
        <span>Moments+</span>
      </a>
    </div>
    
    <div class="hidden md:flex gap-8 flex-1 justify-center">
      <a href={getLocalizedPath(lang, '')} class="text-gray-600 font-medium hover:text-gray-900 transition-colors">
        {t(lang, 'nav.home')}
      </a>
      <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 font-medium hover:text-gray-900 transition-colors">
        {t(lang, 'nav.support')}
      </a>
    </div>
    
    <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
  </nav>
  
  <!-- Mobile menu -->
  <div class="md:hidden flex justify-center gap-6 px-4 pb-4 border-t border-gray-100 pt-4">
    <a href={getLocalizedPath(lang, '')} class="text-gray-600 font-medium hover:text-gray-900 transition-colors">
      {t(lang, 'nav.home')}
    </a>
    <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 font-medium hover:text-gray-900 transition-colors">
      {t(lang, 'nav.support')}
    </a>
  </div>
</header>
