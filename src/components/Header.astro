---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
---

<header style="background: rgba(255, 255, 255, 0.72); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(0, 0, 0, 0.06);" class="sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 md:px-8 py-4 flex justify-between items-center">
    <a href={getLocalizedPath(lang, '')} class="flex items-center gap-2.5 font-semibold hover:opacity-80 transition-opacity" style="color: #1d1d1f;">
      <img 
        src="/images/icon/AppIconImage.png" 
        alt="Moments+" 
        class="w-8 h-8 rounded-lg"
        style="box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.03);"
      />
      <span>Moments+</span>
    </a>
    
    <div class="flex items-center gap-6">
      <a href={getLocalizedPath(lang, 'blog')} class="text-sm hover:opacity-70 transition-opacity hidden md:block" style="color: #1d1d1f;">
        {t(lang, 'nav.blog')}
      </a>
      <a href={getLocalizedPath(lang, 'support')} class="text-sm hover:opacity-70 transition-opacity hidden md:block" style="color: #1d1d1f;">
        {t(lang, 'nav.support')}
      </a>
      <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
      <a 
        href="https://apps.apple.com/app/moments-plus" 
        target="_blank"
        rel="noopener noreferrer"
        class="px-4 py-2 rounded-full text-sm font-medium hover:opacity-90 transition-all hover:scale-105"
        style="background: #1d1d1f; color: white;"
      >
        {t(lang, 'nav.download')}
      </a>
    </div>
  </nav>
</header>
