---
interface Props {
  title: string;
  subtitle: string;
  description: string;
  ctaText: string;
  ctaLink: string;
  appIcon: string;
}

const { title, subtitle, appIcon } = Astro.props;
---

<section class="hero-section min-h-screen flex items-center justify-center px-4 md:px-8 py-20 relative overflow-hidden">
  <!-- 柔和的渐变背景 - 呼应相册的温暖感 -->
  <div class="gradient-bg"></div>
  
  <!-- 浮动的光斑效果 -->
  <div class="floating-orb orb-1"></div>
  <div class="floating-orb orb-2"></div>
  <div class="floating-orb orb-3"></div>
  
  <div class="text-center max-w-5xl mx-auto relative z-10">
    <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-semibold mb-6" style="color: #1d1d1f; line-height: 1.05; letter-spacing: -0.015em;">
      {title}
    </h1>
    <p class="hero-subtitle text-xl md:text-2xl font-light" style="color: #6e6e73; line-height: 1.4;">
      {subtitle}
    </p>
  </div>
</section>

<style>
  .hero-section {
    background: linear-gradient(180deg, #fefefe 0%, #f9f8f6 100%);
  }
  
  .gradient-bg {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(255, 228, 196, 0.12) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 80%, rgba(255, 218, 185, 0.08) 0%, transparent 40%),
      radial-gradient(ellipse 50% 30% at 20% 90%, rgba(230, 230, 250, 0.06) 0%, transparent 40%);
    animation: gradientPulse 30s ease-in-out infinite;
  }
  
  @keyframes gradientPulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
  
  .floating-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.3;
    animation: floatSlow 40s ease-in-out infinite;
  }
  
  .orb-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, rgba(255, 210, 170, 0.25) 0%, rgba(255, 190, 140, 0.15) 100%);
    top: -15%;
    right: -10%;
    animation-delay: 0s;
  }
  
  .orb-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, rgba(210, 210, 240, 0.2) 0%, rgba(190, 190, 230, 0.1) 100%);
    bottom: 5%;
    left: -10%;
    animation-delay: -12s;
  }
  
  .orb-3 {
    width: 300px;
    height: 300px;
    background: linear-gradient(135deg, rgba(255, 225, 190, 0.15) 0%, rgba(255, 210, 170, 0.08) 100%);
    top: 35%;
    left: 55%;
    animation-delay: -25s;
  }
  
  @keyframes floatSlow {
    0%, 100% {
      transform: translate(0, 0);
    }
    25% {
      transform: translate(15px, -20px);
    }
    50% {
      transform: translate(-8px, 15px);
    }
    75% {
      transform: translate(20px, 8px);
    }
  }
  
  .hero-title {
    animation: fadeInUp 1.2s ease-out, subtleFloat 8s ease-in-out 1.2s infinite;
  }
  
  .hero-subtitle {
    animation: fadeInUp 1.2s ease-out 0.3s both, subtleFloat 8s ease-in-out 1.5s infinite;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* 文字微妙的呼吸效果 */
  @keyframes subtleFloat {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
  }
</style>
