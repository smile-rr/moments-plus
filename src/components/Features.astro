---
interface Feature {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section class="mt-16 md:mt-24 px-4 md:px-8 max-w-7xl mx-auto">
  <div class="text-center mb-16">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold lg:tracking-tight">
      Everything you need in one app
    </h2>
    <p class="text-lg md:text-xl mt-4 text-slate-600 max-w-2xl mx-auto">
      Moments+ comes with powerful features to help you organize and cherish your memories.
    </p>
  </div>

  <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-8 md:gap-12">
    {features.map((feature) => (
      <div class="flex gap-4 items-start group">
        <div class="mt-1 bg-black rounded-full p-2 w-10 h-10 shrink-0 flex items-center justify-center group-hover:scale-110 transition-transform">
          {feature.icon && <span class="text-2xl">{feature.icon}</span>}
        </div>
        <div>
          <h3 class="font-semibold text-lg md:text-xl mb-2">{feature.title}</h3>
          <p class="text-slate-600 leading-relaxed">{feature.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
