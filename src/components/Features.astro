---
interface Feature {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  features: Feature[];
  title?: string;
  subtitle?: string;
}

const { features } = Astro.props;
---

<section class="py-32 px-4 md:px-8" style="background: #f5f5f7;">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-12 md:gap-16">
      {features.map((feature) => (
        <div class="text-center">
          {feature.icon && (
            <div class="text-6xl mb-4">
              {feature.icon}
            </div>
          )}
          <h3 class="text-lg md:text-xl font-semibold mb-2" style="color: #1d1d1f;">
            {feature.title}
          </h3>
          <p class="text-sm leading-relaxed" style="color: #86868b;">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
