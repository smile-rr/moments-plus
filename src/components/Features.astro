---
interface Feature {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  features: Feature[];
  title?: string;
  subtitle?: string;
}

const { features } = Astro.props;
---

<section class="min-h-screen flex items-center justify-center py-20 px-4 md:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-12 md:gap-16">
      {features.map((feature) => (
        <div class="text-center">
          {feature.icon && (
            <div class="text-7xl mb-6">
              {feature.icon}
            </div>
          )}
          <h3 class="text-xl md:text-2xl font-semibold" style="color: #1d1d1f;">
            {feature.title}
          </h3>
        </div>
      ))}
    </div>
  </div>
</section>
