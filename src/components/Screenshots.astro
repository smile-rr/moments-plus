---
interface Screenshot {
  src: string;
  alt: string;
  caption?: string;
}

interface Props {
  screenshots: Screenshot[];
}

const { screenshots } = Astro.props;
---

<section class="py-32 px-4 md:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex gap-8 md:gap-12 overflow-x-auto pb-8 snap-x snap-mandatory scrollbar-hide justify-center">
      {screenshots.slice(0, 5).map((screenshot) => (
        <div class="flex-shrink-0 snap-center">
          <img 
            src={screenshot.src} 
            alt={screenshot.alt}
            loading="lazy"
            class="w-64 md:w-80 h-auto rounded-[32px]"
            style="box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);"
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
