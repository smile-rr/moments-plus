---
interface Screenshot {
  src: string;
  alt: string;
  caption?: string;
}

interface Props {
  screenshots: Screenshot[];
}

const { screenshots } = Astro.props;
---

<section class="py-20 md:py-32 bg-gray-50 -mx-4 md:-mx-8 px-4 md:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="flex gap-8 overflow-x-auto pb-8 snap-x snap-mandatory scrollbar-hide -mx-4 px-4">
      {screenshots.map((screenshot) => (
        <div class="flex-shrink-0 snap-center first:ml-4 last:mr-4">
          <img 
            src={screenshot.src} 
            alt={screenshot.alt}
            loading="lazy"
            class="w-64 h-auto rounded-3xl shadow-xl"
          />
          {screenshot.caption && (
            <p class="mt-4 text-center text-sm font-medium text-gray-700">{screenshot.caption}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>
