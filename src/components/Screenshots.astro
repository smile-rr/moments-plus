---
interface Screenshot {
  src: string;
  alt: string;
  caption?: string;
}

interface Props {
  screenshots: Screenshot[];
}

const { screenshots } = Astro.props;
---

<section class="py-24 md:py-40 px-4 md:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex gap-8 md:gap-12 overflow-x-auto pb-8 snap-x snap-mandatory scrollbar-hide justify-center">
      {screenshots.map((screenshot, index) => (
        <div class="flex-shrink-0 snap-center" style={`animation: fadeInUp 0.6s ease-out ${index * 0.1}s both;`}>
          <img 
            src={screenshot.src} 
            alt={screenshot.alt}
            loading="lazy"
            class="w-56 md:w-72 h-auto rounded-[32px] shadow-2xl hover:scale-105 transition-transform duration-500"
            style="box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);"
          />
          {screenshot.caption && (
            <p class="mt-6 text-center text-sm font-medium" style="color: #6b6b6b;">{screenshot.caption}</p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
