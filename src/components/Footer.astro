---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer style="background: #f5f5f7; border-top: 1px solid rgba(0, 0, 0, 0.04);">
  <div class="max-w-7xl mx-auto px-4 md:px-8 py-16">
    <div class="grid md:grid-cols-2 gap-12 mb-12">
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <img src="/images/icon/AppIconImage.png" alt="Moments+" class="w-10 h-10 rounded-lg" />
          <span class="font-semibold text-lg" style="color: #1d1d1f;">Moments+</span>
        </div>
        <p class="text-sm" style="color: #86868b; line-height: 1.6;">
          {t(lang, 'footer.tagline')}
        </p>
      </div>
      
      <!-- Links -->
      <div>
        <div class="flex flex-col gap-3 text-sm">
          <a href={getLocalizedPath(lang, 'blog')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'nav.blog')}
          </a>
          <a href={getLocalizedPath(lang, 'support')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'nav.support')}
          </a>
          <a href={getLocalizedPath(lang, 'privacy')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'footer.links.privacy')}
          </a>
          <a href={getLocalizedPath(lang, 'terms')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'footer.links.terms')}
          </a>
          <a 
            href="https://apps.apple.com/app/moments-plus" 
            target="_blank"
            rel="noopener noreferrer"
            class="hover:opacity-70 transition-opacity"
            style="color: #86868b;"
          >
            {t(lang, 'footer.links.download')}
          </a>
        </div>
      </div>
    </div>
    
    <div class="pt-8 border-t border-black/5 text-center">
      <p class="text-sm" style="color: #86868b;">
        Â© {currentYear} Moments+. All rights reserved.
      </p>
    </div>
  </div>
</footer>
