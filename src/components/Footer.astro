---
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-50 border-t border-gray-200 mt-20 md:mt-32">
  <div class="max-w-6xl mx-auto px-4 md:px-8 py-12">
    <div class="flex flex-col items-center gap-6">
      <div class="flex items-center gap-2">
        <img src="/images/icon/AppIconImage.png" alt="Moments+ Icon" class="w-10 h-10 rounded-lg" />
        <span class="text-lg font-semibold text-gray-900">Moments+</span>
      </div>
      
      <div class="flex flex-wrap justify-center gap-6">
        <a href={getLocalizedPath(lang, 'privacy')} class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
          {t(lang, 'footer.links.privacy')}
        </a>
        <a href={getLocalizedPath(lang, 'terms')} class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
          {t(lang, 'footer.links.terms')}
        </a>
        <a href={getLocalizedPath(lang, 'support')} class="text-gray-600 hover:text-gray-900 transition-colors text-sm">
          {t(lang, 'footer.links.support')}
        </a>
      </div>
      
      <p class="text-gray-500 text-sm">
        Â© {currentYear} Moments+. {t(lang, 'footer.copyright')}
      </p>
    </div>
  </div>
</footer>
