---
import { Image } from 'astro:assets';
import AppIcon from '../assets/images/icon/AppIconImage.png';
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer-section relative overflow-hidden" style="border-top: 1px solid rgba(0, 0, 0, 0.04);">
  <div class="footer-bg"></div>
  
  <div class="max-w-7xl mx-auto px-4 md:px-8 py-16 relative z-10">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 md:gap-12 mb-12">
      <!-- Col 1: Brand -->
      <div class="footer-brand col-span-2 md:col-span-1">
        <div class="flex items-center gap-2 mb-4">
          <Image 
            src={AppIcon} 
            alt={t(lang, 'common.brand')} 
            class="w-10 h-10 rounded-lg"
            width={80}
            densities={[1.5, 2]}
            style="box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);"
          />
          <span class="font-semibold text-lg" style="color: var(--color-text);">{t(lang, 'common.brand')}</span>
        </div>
        <p class="text-sm" style="color: var(--color-text-muted); line-height: 1.6;">
          {t(lang, 'footer.tagline')}
        </p>
      </div>
      
      <!-- Col 2: Product -->
      <div class="footer-col flex flex-col gap-3 text-sm">
        <span class="font-semibold mb-1" style="color: var(--color-text)">{t(lang, 'footer.product')}</span>
        <a href={getLocalizedPath(lang, 'blog')} class="hover:opacity-70 transition-opacity" style="color: var(--color-text-muted);">
          {t(lang, 'nav.blog')}
        </a>
        <a href={getLocalizedPath(lang, 'support')} class="hover:opacity-70 transition-opacity" style="color: var(--color-text-muted);">
          {t(lang, 'nav.support')}
        </a>
        <a 
          href="https://apps.apple.com/app/id6756813551" 
          target="_blank"
          rel="noopener noreferrer"
          class="hover:opacity-70 transition-opacity"
          style="color: var(--color-text-muted);"
        >
          {t(lang, 'footer.links.download')}
        </a>
      </div>

      <!-- Col 3: Legal -->
      <div class="footer-col flex flex-col gap-3 text-sm">
        <span class="font-semibold mb-1" style="color: var(--color-text)">{t(lang, 'footer.legal')}</span>
        <a href={getLocalizedPath(lang, 'privacy')} class="hover:opacity-70 transition-opacity" style="color: var(--color-text-muted);">
          {t(lang, 'footer.links.privacy')}
        </a>
        <a href={getLocalizedPath(lang, 'terms')} class="hover:opacity-70 transition-opacity" style="color: var(--color-text-muted);">
          {t(lang, 'footer.links.terms')}
        </a>
      </div>
      
      <!-- Col 4: Connect -->
      <div class="footer-col flex flex-col gap-4">
        <span class="font-semibold text-sm mb-1" style="color: var(--color-text)">{t(lang, 'footer.connect')}</span>
        <div class="flex gap-4">
          <a 
            href="https://www.instagram.com/qingran1211" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="hover:opacity-70 transition-opacity"
            style="color: var(--color-text-muted);"
            aria-label="Instagram"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a 
            href="https://x.com/qingran1211" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="hover:opacity-70 transition-opacity"
            style="color: var(--color-text-muted);"
            aria-label="X (formerly Twitter)"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
              <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
            </svg>
          </a>
          <a 
            href="https://www.facebook.com/radon.li.7/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="hover:opacity-70 transition-opacity"
            style="color: var(--color-text-muted);"
            aria-label="Facebook"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
        </div>

        <div>
           <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
        </div>
      </div>
    </div>
    
    <div class="pt-8 border-t border-black/5 text-center">
      <p class="text-sm" style="color: var(--color-text-muted);">
        Â© {currentYear} {t(lang, 'common.brand')}. {t(lang, 'footer.copyright')}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: linear-gradient(180deg, #f7f7f9 0%, #f5f5f7 100%);
  }
  
  .footer-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 50% 50% at 80% 20%, rgba(255, 218, 185, 0.03) 0%, transparent 50%);
  }
  
  .footer-brand {
    animation: fadeIn 0.8s ease-out;
  }
  
  .footer-links {
    animation: fadeIn 0.8s ease-out 0.1s both;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
