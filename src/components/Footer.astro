---
import { Image } from 'astro:assets';
import AppIcon from '../assets/images/icon/AppIconImage.png';
import type { Locale } from '../i18n';
import { t, getLocalizedPath } from '../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  currentPath: string;
}

const { lang, currentPath } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="footer-section relative overflow-hidden" style="border-top: 1px solid rgba(0, 0, 0, 0.04);">
  <div class="footer-bg"></div>
  
  <div class="max-w-7xl mx-auto px-4 md:px-8 py-16 relative z-10">
    <div class="grid md:grid-cols-2 gap-12 mb-12">
      <!-- Brand -->
      <div class="footer-brand">
        <div class="flex items-center gap-2 mb-4">
          <Image 
            src={AppIcon} 
            alt={t(lang, 'common.brand')} 
            class="w-10 h-10 rounded-lg"
            width={80}
            densities={[1.5, 2]}
            style="box-shadow: 0 1px 4px rgba(0, 0, 0, 0.06);"
          />
          <span class="font-semibold text-lg" style="color: #1d1d1f;">{t(lang, 'common.brand')}</span>
        </div>
        <p class="text-sm" style="color: #86868b; line-height: 1.6;">
          {t(lang, 'footer.tagline')}
        </p>
      </div>
      
      <!-- Links -->
      <div class="footer-links">
        <div class="flex flex-col gap-3 text-sm">
          <a href={getLocalizedPath(lang, 'blog')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'nav.blog')}
          </a>
          <a href={getLocalizedPath(lang, 'support')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'nav.support')}
          </a>
          <a href={getLocalizedPath(lang, 'privacy')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'footer.links.privacy')}
          </a>
          <a href={getLocalizedPath(lang, 'terms')} class="hover:opacity-70 transition-opacity" style="color: #86868b;">
            {t(lang, 'footer.links.terms')}
          </a>
          <a 
            href="https://apps.apple.com/app/moments-plus" 
            target="_blank"
            rel="noopener noreferrer"
            class="hover:opacity-70 transition-opacity"
            style="color: #86868b;"
          >
            {t(lang, 'footer.links.download')}
          </a>
          <div class="pt-2">
            <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
          </div>
        </div>
      </div>
    </div>
    
    <div class="pt-8 border-t border-black/5 text-center">
      <p class="text-sm" style="color: #86868b;">
        Â© {currentYear} {t(lang, 'common.brand')}. {t(lang, 'footer.copyright')}
      </p>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    background: linear-gradient(180deg, #f7f7f9 0%, #f5f5f7 100%);
  }
  
  .footer-bg {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse 50% 50% at 80% 20%, rgba(255, 218, 185, 0.03) 0%, transparent 50%);
  }
  
  .footer-brand {
    animation: fadeIn 0.8s ease-out;
  }
  
  .footer-links {
    animation: fadeIn 0.8s ease-out 0.1s both;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
</style>
