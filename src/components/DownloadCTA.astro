---
import type { Locale } from '../i18n';

interface Props {
  ctaText: string;
  ctaLink: string;
  lang: Locale;
}

const { ctaText, ctaLink, lang } = Astro.props;

const ctaTitle = {
  en: 'Start cherishing every moment',
  zh: '开始珍藏你的每个瞬间',
  ja: 'すべての瞬間を大切に',
};

const ctaSubtitle = {
  en: 'Keep your memories together, make time worth remembering',
  zh: '让回忆不再散落，让时光值得回味',
  ja: '思い出を一つに、時間を価値あるものに',
};

const ctaNote = {
  en: 'Available on iPhone and iPad',
  zh: '支持 iPhone 和 iPad',
  ja: 'iPhone と iPad に対応',
};
---

<section class="py-24 md:py-32 px-4 md:px-8">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-8" style="color: #2c2c2c; line-height: 1.3;">
      {ctaTitle[lang]}
    </h2>
    <p class="text-xl md:text-2xl mb-12 font-light" style="color: #6b6b6b; line-height: 1.5;">
      {ctaSubtitle[lang]}
    </p>
    
    <a 
      href={ctaLink} 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-flex items-center gap-3 px-10 py-5 rounded-full font-medium text-lg transition-all hover:scale-105 hover:shadow-2xl"
      style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; box-shadow: 0 10px 40px rgba(102, 126, 234, 0.4);"
    >
      <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
      </svg>
      {ctaText}
    </a>
    
    <p class="mt-8 text-sm" style="color: #8a8a8a;">
      {ctaNote[lang]}
    </p>
  </div>
</section>
