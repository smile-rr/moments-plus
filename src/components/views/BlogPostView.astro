---
import { type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { type Locale, t, getLocalizedPath } from '../../i18n';
import { formatDate, getCategoryLabel } from '../../utils/blog';

interface Props {
  post: CollectionEntry<'blog'>;
  lang: Locale;
}

const { post, lang } = Astro.props;
const { Content } = await post.render();
const slug = post.id.split('/')[1].replace(/\.md$/, '');
const currentPath = getLocalizedPath(lang, `blog/${slug}`);
---

<BaseLayout 
  title={post.data.title} 
  description={post.data.description}
  lang={lang}
  currentPath={currentPath}
>
  <article class="max-w-3xl mx-auto px-4 md:px-8 py-16">
    <a 
      href={getLocalizedPath(lang, 'blog')}
      class="inline-flex items-center gap-2 text-sm font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white mb-8 transition-colors group"
      style="color: var(--color-text-muted);"
      aria-label={t(lang, 'blog.backToBlog')}
    >
      <div class="w-10 h-10 md:w-8 md:h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center transition-colors group-hover:bg-gray-200 dark:group-hover:bg-gray-700">
        <svg class="w-5 h-5 md:w-4 md:h-4 transition-transform group-hover:-translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      </div>
      <span class="hidden md:inline">{t(lang, 'blog.backToBlog')}</span>
    </a>

    <header class="mb-12">
      {post.data.category && (
        <span 
          class="inline-block px-3 py-1 text-sm font-medium rounded-full mb-4"
          style="background: rgba(var(--color-primary-rgb), 0.1); color: var(--color-primary);"
        >
          {getCategoryLabel(post.data.category, lang)}
        </span>
      )}
      <h1 class="text-4xl md:text-5xl font-bold mb-4" style="color: var(--color-text);">
        {post.data.title}
      </h1>
      <div class="flex items-center gap-4" style="color: var(--color-text-muted);">
        <time>{formatDate(post.data.publishDate, lang)}</time>
        {post.data.author && (
          <>
            <span>â€¢</span>
            <span>{post.data.author}</span>
          </>
        )}
      </div>
    </header>

    <div class="prose md:prose-lg dark:prose-invert max-w-none
      prose-headings:text-[var(--color-text)]
      prose-p:text-[var(--color-text-secondary)]
      prose-a:text-[var(--color-primary)] prose-a:no-underline hover:prose-a:underline
      prose-strong:text-[var(--color-text)]
      prose-code:text-[var(--color-text)]
      prose-pre:bg-gray-100 dark:prose-pre:bg-gray-800
      [&>h1]:hidden
    ">
      <Content />
    </div>
  </article>
</BaseLayout>
