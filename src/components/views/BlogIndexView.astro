---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { type Locale, t } from '../../i18n';
import { getBlogPosts, formatDate, getCategoryLabel } from '../../utils/blog';

interface Props {
  lang: Locale;
}

const { lang } = Astro.props;
const posts = await getBlogPosts(lang);
const currentPath = lang === 'en' ? '/blog' : `/${lang}/blog`;
---

<BaseLayout 
  title={t(lang, 'blog.title')} 
  description={t(lang, 'blog.subtitle')}
  lang={lang}
  currentPath={currentPath}
>
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-bold mb-4" style="color: var(--color-text);">
        {t(lang, 'blog.title')}
      </h1>
      <p class="text-xl" style="color: var(--color-text-secondary);">
        {t(lang, 'blog.subtitle')}
      </p>
    </div>

    <!-- Category Filter Pills -->
    <div class="flex flex-wrap justify-center gap-2 mb-12" id="category-filters">
      <button 
        data-category="all" 
        class="category-pill active px-4 py-2 rounded-full text-sm font-medium transition-all"
      >
        {lang === 'zh' ? '全部' : 'All'}
      </button>
      <button 
        data-category="updates" 
        class="category-pill px-4 py-2 rounded-full text-sm font-medium transition-all bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        {getCategoryLabel('updates', lang)}
      </button>
      <button 
        data-category="travel" 
        class="category-pill px-4 py-2 rounded-full text-sm font-medium transition-all bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        {getCategoryLabel('travel', lang)}
      </button>
      <button 
        data-category="daily" 
        class="category-pill px-4 py-2 rounded-full text-sm font-medium transition-all bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        {getCategoryLabel('daily', lang)}
      </button>
      <button 
        data-category="guides" 
        class="category-pill px-4 py-2 rounded-full text-sm font-medium transition-all bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        {getCategoryLabel('guides', lang)}
      </button>
      <button 
        data-category="engineering" 
        class="category-pill px-4 py-2 rounded-full text-sm font-medium transition-all bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700"
      >
        {getCategoryLabel('engineering', lang)}
      </button>
    </div>

    <div class="space-y-4" id="posts-container">
      {posts.map((post) => (
        <article class="post-card group relative bg-white dark:bg-gray-800 rounded-2xl p-6 transition-all duration-300 hover:shadow-lg hover:-translate-y-1" data-category={post.data.category || 'uncategorized'}>
          <div class="flex flex-col md:flex-row md:items-start justify-between gap-6">
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-3 mb-3">
                {post.data.category && (
                  <span 
                    class="inline-block px-3 py-1 text-xs font-medium rounded-full"
                    style="background: rgba(var(--color-primary-rgb), 0.1); color: var(--color-primary);"
                  >
                    {getCategoryLabel(post.data.category, lang)}
                  </span>
                )}
                <time class="text-xs" style="color: var(--color-text-muted);">
                  {formatDate(post.data.publishDate, lang)}
                </time>
              </div>
              
              <h2 class="text-xl font-semibold mb-2 transition-colors" style="color: var(--color-text);">
                <a href={lang === 'en' ? `/blog/${post.id.split('/')[1].replace(/\.md$/, '')}` : `/${lang}/blog/${post.id.split('/')[1].replace(/\.md$/, '')}`} class="focus:outline-none">
                  <span class="absolute inset-0" aria-hidden="true"></span>
                  {post.data.title}
                </a>
              </h2>
              
              <p class="text-base line-clamp-2" style="color: var(--color-text-secondary); line-height: 1.6;">
                {post.data.description}
              </p>
            </div>
            
            <div 
              class="hidden md:flex shrink-0 w-10 h-10 rounded-full items-center justify-center transition-all duration-300 group-hover:bg-black/5 dark:group-hover:bg-white/10"
              style="color: var(--color-text-muted);"
            >
              <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </div>
        </article>
      ))}
    </div>
    
    <!-- Empty State -->
    <div id="empty-state" class="hidden text-center py-12">
      <p class="text-gray-500 dark:text-gray-400">{lang === 'zh' ? '该分类暂无文章' : 'No posts in this category yet.'}</p>
    </div>
  </div>
</BaseLayout>

<style>
  .category-pill {
    transition: all 0.2s ease;
  }
  
  .category-pill.active {
    background-color: var(--color-primary);
    color: var(--color-button-text);
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const pills = document.querySelectorAll('.category-pill');
    const posts = document.querySelectorAll('.post-card');
    const emptyState = document.getElementById('empty-state');

    pills.forEach(pill => {
      pill.addEventListener('click', () => {
        const category = pill.dataset.category;
        
        // Update active state
        pills.forEach(p => {
          p.classList.remove('active');
          // Reset utility classes for inactive state
          p.classList.add('bg-gray-100', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        });
        
        // Set active state
        pill.classList.remove('bg-gray-100', 'dark:bg-gray-800', 'text-gray-700', 'dark:text-gray-300');
        pill.classList.add('active');

        // Filter posts
        let visibleCount = 0;
        posts.forEach(post => {
          const postCategory = (post as HTMLElement).dataset.category;
          if (category === 'all' || postCategory === category) {
            (post as HTMLElement).style.display = '';
            visibleCount++;
          } else {
            (post as HTMLElement).style.display = 'none';
          }
        });

        // Show/hide empty state
        if (emptyState) {
          emptyState.classList.toggle('hidden', visibleCount > 0);
        }
      });
    });
  });
</script>
